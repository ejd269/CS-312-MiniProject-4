<!DOCTYPE html>
<html lang="en">
    <!-- basic HTML setup -->
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!-- bootstrap -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" 
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <!-- add CSS -->
        <link rel="stylesheet" href="/styles/edit.css">
        <title>Edit Post</title>
    </head>

    <body>
        <div id="main-container">
            <h1>Edit post</h1>
            <!-- routing to load submitedit logic with corresponding id -->
            <form action="/submitedit/<%= post.id %>" class="form" method="POST">
                <div id="separator">
                    <label for="name" style="font-weight: 600;">Blog Creator Name:</label>
                    <!-- load textboxes with previous post content -->
                    <input type="text" id="name" name="name" value="<%= post.name %>" required>
                    <label for="title" style="margin-left: 19px; font-weight: 600;">Blog Title:</label>
                    <input type="text" id="title" name="title" value="<%= post.title %>" required>
                </div>
                <label for="content" style="font-weight: 600;">Blog Content:</label>
                <textarea name="content" type="text" id="content" style="height: 550px; width: 98.8%;" required><%= post.content %></textarea>
                <button type="submit">Submit</button>
            </form>
        </div>
    </body>
</html>